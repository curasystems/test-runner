{
  "name": "cura-test-runner",
  "version": "0.0.2",
  "description": "A simple mocha test executor. Just add as dev-dependency and write a test.js with require('cura-test-runner') to run all coffee/mocha tests and get notified via growl of failures\"",
  "main": "index.js",
  "dependencies": {
    "chai": "~1.7.2",
    "glob": "~3.2.3",
    "growl": "~1.7.0",
    "optimist": "~0.6.0",
    "coffee-script-mapped": "~0.1.4",
    "coffee-script": "~1.6.3",
    "diff": "~1.0.5"
  },
  "devDependencies": {
    "mocha": "~1.12.0"
  },
  "scripts": {
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/curasystems/test-runner.git"
  },
  "keywords": [
    "test",
    "mocha",
    "coffee"
  ],
  "author": "Matthias Goetzke",
